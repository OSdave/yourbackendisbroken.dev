#!/bin/bash

STEP_1=`git rev-list -n 1 step-1`
CURRENT_COMMIT=`git rev-parse HEAD`

if [ $CURRENT_COMMIT == $STEP_1 ]; then
  echo "You are already at the beginning of this tutorial ;-)"
  exit
fi

git reset --hard HEAD > /dev/null 2>&1
git checkout HEAD^1 > /dev/null 2>&1

clear

# Banner for current (new) step
CURRENT_STEP=`git describe --tags`
.tutorial/banner "$CURRENT_STEP"
